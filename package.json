{
  "name": "macro-extension",
  "version": "0.4.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:verbose": "vitest run --reporter=verbose",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "serve": "node live-reload-server.js",
    "dev:full": "concurrently --kill-others-on-fail --names 'VITE,RELOAD' --prefix-colors 'blue,green' 'npm run dev' 'npm run serve'",
    "dev:stop": "./stop-dev.sh",
    "dev:restart": "npm run dev:stop && npm run dev:full",
    "dev:status": "lsof -i:5173,3001 || echo 'No development servers running'"
  },
  "dependencies": {
    "dompurify": "^3.2.7",
    "fuzzysort": "^3.1.0",
    "medium-editor": "^5.23.3",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.1.4",
    "@types/dompurify": "^3.0.5",
    "@types/medium-editor": "^5.0.8",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.1",
    "autoprefixer": "^10.4.21",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "express": "^4.21.2",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.5.4",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "ws": "^8.18.3"
  }
}
